                            <input type="checkbox" id="pizza" value="Pizza"> Pizza
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="vietnamese" value="Vietnamese"> Vietnamese
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="steak" value="Steak House"> Steak House
                        </label>                      
                        <label class="checkbox-inline">
                            <input type="checkbox" id="bbq" value="BBQ"> BBQ
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="chinese" value="Chinese"> Chinese
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="french" value="French"> French
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="sushi" value="Sushi"> Sushi
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="mexican" value="Mexican"> Mexican
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="german" value="German"> German
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="healthy" value="Healthy"> Healthy
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="mediterranean" value="Mediterranean"> Mediterranean
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="deli" value="Deli"> Deli
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="seafood" value="Seafood"> Seafood
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="pubBrew" value="Pub/Brewery"> Pub/Brewery
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="japanese" value="Japanese"> Japanese
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="korean" value="Korean"> Korean
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="ramen" value="Ramen"> Ramen
                        </label><br />
                        @*BREAK*@    
                        <label class="checkbox-inline">
                            <input type="checkbox" id="south" value="Southern"> Southern
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="wineBar" value="Wine Bar"> Wine Bar
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="cafe" value="Cafe"> Cafe
                        </label><br />
