                        <br />
                        <div class="resultBox">
                            <button type="button" class="btn btn-primary btn-xs foodBtn">Let's Pick</button>
                            <h4>Food of Choice: <span class="foodChoice"></span></h4>
                        </div>
                        </div>                          
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
