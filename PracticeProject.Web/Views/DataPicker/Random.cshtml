
@{
    ViewBag.Title = "Click to Pick";
}
<h2>Random</h2>
<div ng-app="mainApp">
    <div class="container" ng-controller="dataPickerCtrl as pickCtrl" ng-cloak>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <span>Click the button to see who gets to choose today's lunch  or dinner option</span><br/>
                    <button type="button" class="btn btn-primary btn-xs personBtn">Randomize</button>
                    <h4>The Decider: <span class="winner"></span></h4>
                </div>
                <div class="col-md-6">
                    <div class="col-md-6" id="selections">
                        <label class="control-label">Cuisines</label>
                        <p class="help-block"><small>Mark selections:</small></p>

                        <label class="checkbox-inline">
                            <input type="checkbox" id="american" value="American"> American
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="burgers" value="Burgers"> Burgers
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" id="thai" value="Thai"> Thai
                        </label><br>
                        @*BREAK*@
                        <label class="checkbox-inline">
                            <input type="checkbox" id="italian" value="Italian"> Italian
                        </label>
